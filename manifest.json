{
  "manifest_version": 3,
  "name": "Indicadores Banxico (SIE)",
  "version": "2.5.0",
  "description": "Consulta rápida de series del SIE de Banxico con selección y formateo.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "onboarding.html",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.banxico.org.mx/*",
    "https://anterior.banxico.org.mx/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}