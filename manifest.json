{
  "manifest_version": 3,
  "name": "Indicadores Banxico (SIE)",
  "version": "3.0",
  "description": "Datos oficiales de Banxico, calculadora de UDIs, actualizaci√≥n fiscal (INPC) y alertas de volatilidad en tiempo real.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "onboarding.html",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://www.banxico.org.mx/*",
    "https://anterior.banxico.org.mx/*",
    "https://www.alphavantage.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}